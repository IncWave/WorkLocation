<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/add_member_id"
        android:layout_gravity="center"
        android:hint="@string/paste_here_member_id"
        android:layout_width="match_parent"
        android:inputType="text"
        android:ems="10"
        android:maxLength="@integer/max_length"
        android:layout_height="wrap_content"
        android:importantForAutofill="no" />
    <Spinner
        android:id="@+id/add_member_select_group_view"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginTop="@dimen/margin18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/add_member_ok"
        android:text="@string/ok1"
        android:layout_gravity="end"
        android:layout_margin="@dimen/margin18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>