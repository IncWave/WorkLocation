<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GroupsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fragment_room_buttons_block"
        android:background="@drawable/background"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
        <ExpandableListView
            android:id="@+id/fragment_group_expendable_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_white">
        </ExpandableListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_room_buttons_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin18dp">
        <ImageButton
            android:id="@+id/fragment_group_delete_button"
            android:src="@drawable/clear_white_48dp"
            android:background="@drawable/button_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin18dp"/>
        <ImageButton
            android:id="@+id/fragment_group_add_button"
            android:src="@drawable/add_white_48dp"
            android:background="@drawable/button_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin18dp"/>
    </LinearLayout>


</RelativeLayout>